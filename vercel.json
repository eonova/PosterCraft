{
  "version": 2,
  "installCommand": "pnpm install -w",
  "buildCommand": "turbo build",
  "functions": {
    "apps/server/dist/src/main.js": {
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "apps/server/dist/src/main.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"]
    }
  ]
}
