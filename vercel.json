{
  "version": 2,
  "builds": [
    {
      "src": "apps/server/dist/src/main.js",
      "use": "@vercel/node"
    },
    {
      "src": "apps/web/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "packages/docs/.vitepress/dist/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "/api/(.*)",
      "dest": "apps/server/dist/src/main.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"]
    },
    { "src": "/docs/(.*)", "dest": "packages/docs/.vitepress/dist/$1" }
  ]
}
