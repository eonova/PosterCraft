{
  "extends": [
    "config:base",
    ":disableDependencyDashboard",
    ":automergeMinor",
    ":separateMajorReleases",
    ":separatePatchReleases",
    ":pinVersions",
    ":rebaseStalePrs",
    ":prHourlyLimitNone",
    ":ignoreModulesAndTests",
    ":updateNotScheduled",
    ":automergeRequireAllStatusChecks",
    ":maintainLockFilesDisabled",
    "group:monorepos",
    "group:recommended"
  ],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "automerge": {
    "enabled": true,
    "minor": false,
    "major": false
  },
  "packageRules": [
    {
      "depTypeList": ["devDependencies"],
      "automerge": true
    },
    {
      "packagePatterns": ["^@poster-craft/"],
      "enabled": false
    },
    {
      "paths": ["apps/server/**/*"],
      "automerge": false
    },
    {
      "paths": ["apps/web/**/*"],
      "automerge": true
    }
  ],
  "ignoreDeps": [],
  "npmrc": ".npmrc",
  "baseBranches": ["main"],
  "lockFileMaintenance": {
    "enabled": true,
    "extends": ["schedule:weekly", "group:allNonMajor"]
  }
}
